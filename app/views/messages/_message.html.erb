<%if current_student.id == message.student.id%>
<div class="message-wrapper">
     <div class="my-message">
      <div class="my-name-date">
        <div class="name">
          <%=message.student.name%>
        </div>
        <div class="date">
          <%=message.created_at.strftime("%Y年%m月%d日%H時%M分")%>
        </div>
      </div>
      <%if message.content != ""%>
      <div class="text">
        <%=simple_format(message.content)%>
      </div>
        <%end%>
      <div class='message-image'>
       <%=image_tag message.image.variant(resize: '300x300'), class: 'message-img' if message.image.attached?%>
       </div>
    </div>
    </div>

<%else%>
    <div class="message-wrapper">
    <div class="your-message">
      <div class="your-name-date">
        <div class="name">
