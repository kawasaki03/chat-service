<div class='account-page' id='account-page'>
  <div class='account-page__inner '>
    <div class='account-page__header'>
      <h2>コネクト</h2>
      <h5>講師用アカウントの作成</h5>
    </div>
    
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
       <%= render 'layouts/error_messages', model: f.object %>
    <div class='user-form'>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name,"お名前"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name,autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email,"メールアドレス"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password,"パスワード"%>
            <i>(英数字8文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation,"パスワード"%>
             <i>(確認用)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off"%>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "登録する", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
  <div class='account-page__inner '>
    <div class= "move-page">アカウントをお持ちですか？
    <p>→<%=link_to "ログインする(講師)",new_teacher_session_path%></p>
    <p>→<%=link_to "ログインする(生徒)",new_student_session_path%></p>
    </div>
    </div>
</div>
