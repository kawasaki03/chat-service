<div class="wrapper">
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>ようこそ、<%=current_student.name%>さん</h3>
      
  <div class='account-info'>
      <h3>登録情報</h3>
      <p>お名前：<%=current_student.name%></p>
      <p>メールアドレス：<%=current_student.email%></p>

      <%= link_to "編集", edit_student_path(id: params[:id]),class: 'btn'%>
      <%= link_to "ログアウト", destroy_student_session_path, method: :delete,class: 'btn'%>
    </div>

    <div class="move-chat">
    <%=link_to "チャットを始める", rooms_path%>
    </div>
     
   
  </div>
</div>
</div>