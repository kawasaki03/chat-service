<div class="wrapper">
  <div class="account-page">
    <div class="students-index-page">
    <h1>- 生徒情報一覧 -</h1>
      <%@students.each do |student|%>
        <div class='account-info'>
          
          <div class="students-index__account-info-data">
          
          <div class="account-info-data__left">
            <%=image_tag student.image.variant(resize: '70x70') , class: "user-image" if student.image.attached?%>
          </div>

          <div class="account-info-data__right">
          <h1> <%=student.name%>さん</h1>
          <p>メッセージ： <%=student.status_message%></p>
          </div>
          <div>
         <%=link_to "＞＞詳細ページへ" ,student_records_path(id: student.id),class:"move-show"%>
         <%=link_to "＞＞非表示にする" ,student_registration_path(id: student.id), method: :delete,class: 'destroy_user',data: {confirm: "非表示にしますか？"} ,class:"move-show delete"%>
           </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
